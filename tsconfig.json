    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "outDir": "dist",
    "baseUrl": "./",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
